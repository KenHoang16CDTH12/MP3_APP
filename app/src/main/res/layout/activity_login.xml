<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_gradient"
    tools:context="it.hueic.kenhoang.mp3_app.Activity.LoginActivity">
    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        >
        <com.flaviofaria.kenburnsview.KenBurnsView
            android:background="@drawable/bg_login_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tittle"
            android:text="S O N G"
            android:textSize="50sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/subtitle"
            android:text="HUEIC-IT"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/login"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/email"
                android:hint="Email address"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@drawable/ed_login_email"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="20dp"
                android:textSize="16sp"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                android:text="hoang.duongminh0221@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>
            <EditText
                android:id="@+id/password"
                android:hint="Password"
                android:text="123456"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@drawable/ed_login_pass"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="20dp"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>
            <Button
                android:id="@+id/btnLogin"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:text="Login"
                android:background="@drawable/btn_login"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/dividerOr"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_margin="25dp"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_width="120dp"
            android:layout_height="0.1dp"/>
        <TextView
            android:textColor="@android:color/white"
            android:text="or"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_margin="25dp"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_width="120dp"
            android:layout_height="0.1dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dividerOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="10dp"
            android:id="@+id/facebook"
            android:src="@drawable/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:padding="10dp"
            android:id="@+id/google"
            android:src="@drawable/googleicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
